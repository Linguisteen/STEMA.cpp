{
    "version": "2.0.0",
 
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
    },
    
    "tasks": [
        {
            "label": "一键运行",
            "detail": "运行当前活动文件(自动提取输入参数)",
            "type": "process",
            "command": "raco",
            "args": [ "nanomon", "-v", "exec", "${file}" ],
            "problemMatcher": [ "$gcc" ],
            "group": "build",
            "options": { "cwd": "${fileDirname}" }
        },
        
        {
            "label": "一键调试",
            "detail": "构建当前活动文件",
            "type": "process",
            "command": "raco",
            "args": [ "wisemon", "-d", "cc-dbg", "${file}" ],
            "problemMatcher": [ "$gcc" ],
            "group": "build",
            "options": { "cwd": "${fileDirname}" }
        }
    ]
}
