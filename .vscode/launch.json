{
    "version": "2.0.0",
    
    "configurations": [
        {
            "name": "一键编译/运行 main 函数",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/compiled/native/bin/${fileBasenameNoExtension}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "internalConsoleOptions": "neverOpen",
            "MIMode": "lldb",
            "externalConsole": false,
            "avoidWindowsConsoleRedirection": true,
            "preLaunchTask": "一键运行",

            "logging": {
                "exceptions": false,
                "moduleLoad": false,
                "trace": false,
                "traceResponse": false,
                "engineLogging": false,
                "programOutput": true,
                "natvisDiagnostics": false
            },

            "windows": {
                "program": "${fileDirname}/compiled/native/bin/${fileBasenameNoExtension}.exe",
                "MIMode": "gdb"
            }
        },
        
        {
            "name": "一键编译/调试 main 函数",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/compiled/native/debug/bin/${fileBasenameNoExtension}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "internalConsoleOptions": "openOnSessionStart",
            "MIMode": "lldb",
            "preLaunchTask": "一键调试",
            "externalConsole": true,
            "avoidWindowsConsoleRedirection": true,

            "windows": {
                "program": "${fileDirname}/compiled/native/debug/bin/${fileBasenameNoExtension}.exe",
                "MIMode": "gdb"
            }
        }
    ]
}
